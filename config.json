{
	"name": "ProjFavi",

	"namespace": "Stanford\\ProjFavi",

	"description": "A project-specific EM for the FAVI project",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Andrew Martin",
			"email": "andy123@stanford.edu",
			"institution": "Stanford University"
		}
	],

	"permissions": [
        "redcap_save_record"
	],

	"enable-every-page-hooks-on-system-pages": false,

	"links": {
		"project": [

		],
		"control-center": [

		]
	},

	"no-auth-pages": [

	],

	"project-settings": [
        {
            "key": "random-result-field",
            "name": "<b>Random Result Field</b><br>The field where the randomized value is stored.  Used to decide when to do something",
            "required": true,
            "type": "field-list"
        },
        {
            "key": "random-result-event",
            "name": "<b>Event where Random Result field is stored</b>",
            "required": true,
            "type": "event-list"
        },
        {
            "key": "study-name-field",
            "name": "<b>Study Name Field</b><br>Store the newly assigned secondary project id in this field",
            "required": true,
            "type": "field-list"
        },
        {
            "key": "study-name-event",
            "name": "<b>Event where Study Name Field is stored</b>",
            "required": true,
            "type": "event-list"
        },
        {
            "key": "pharma-alias-pid",
            "name": "<b>Project where Pharma Alias database is stored</b>",
            "required": true,
            "type": "project-id"
        },
        {
            "key": "pharma-alias-event",
            "name": "<b>Event where Pharma Alias Data are stored</b>",
            "required": true,
            "type": "event-list"
        },
        {
            "key": "pharma-alias-field",
            "name": "<b>Pharma Alias Field</b><br>Store the newly assigned pharma alias in this field",
            "required": true,
            "type": "field-list"
        },
        {
            "key": "pharma-batch-field",
            "name": "<b>Pharma Batch Field</b><br>Store the batch from the pharma table in this field",
            "required": true,
            "type": "field-list"
        },
		{
			"key": "enable-project-debug-logging",
			"name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],


	"system-settings": [
		{
			"key": "enable-system-debug-logging",
			"name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],


	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
